@page "/ScreentimeUsage"

<PageTitle>Screentime Usage</PageTitle>

<h1>Enter your time spent on the website</h1>

<label for="website">Website Link:</label>
<input type="text" id="website" placeholder="Enter website link">

<label for="time">Time Spent (minutes):</label>
<input type="number" id="time" placeholder="Enter time spent">

<button onclick="submitData()">Submit</button>

<div id="error-message" style="color: red;"></div>

<script>
    function submitData() {
        // Get values from the input fields
        var website = document.getElementById('website').value;
        var time = document.getElementById('time').value;

        // Clear previous error messages
        document.getElementById('error-message').innerText = '';

        // Simple URL validation
        if (!isValidUrl(website) || isNaN(time) || time <= 0) {
            alert('Invalid data entry');
            return;
        }

        // Assuming you have a function to send data to the server
        sendDataToServer({ website, time });
    }

    function isValidUrl(url) {
        // Basic URL validation using a regular expression
        var urlRegex = /^(http|https):\/\/[^ "]+$/;
        return urlRegex.test(url);
    }

    function sendDataToServer(data) {
        // Assuming you have a function or AJAX to send data to the server
        // Example using fetch API
        fetch('/api/storeData', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        })
            .then(response => response.json())
            .then(data => {
                // Handle response from the server (if needed)
                console.log('Data stored successfully:', data);
            })
            .catch(error => {
                console.error('Error storing data:', error);
            });
    }
</script>
